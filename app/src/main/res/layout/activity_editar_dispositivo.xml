<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    tools:context=".ui.home.dispositivos.EditarDispositivoActivity">


    <include
        android:id="@+id/activity_editar_dispositivo_toolbar"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/activity_editar_dispositivo_salvar"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="151dp"
        android:background="@drawable/botao_arredondado"
        android:text="@string/Salvar"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/activity_editar_dispositivo_adicionar_programacao"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/botao_redondo_verde"
        android:drawableStart="@drawable/ic_control_point"
        android:gravity="center_vertical|center_horizontal|center" />

    <EditText
        android:id="@+id/activity_editar_dispositivo_nome"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:background="@drawable/edit_text_arredondado"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary" />

    <ListView
        android:id="@+id/activity_editar_dispositivo_programacoes"
        android:layout_width="match_parent"
        android:layout_height="356dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="211dp" />


</RelativeLayout>